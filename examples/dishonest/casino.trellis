type CasinoState = { Fair, Loaded }
model {
  state = CasinoState
  output = 1 .. 6
  P(initial x) = 0.5
  P(output o | x) = {
    | @{Fair}   => 1.0 / 6.0
    | @{Loaded} => if o == 6 then 0.5 else 0.1
  }
  P(transition x y) = {
    | @{Fair -> Fair}     => 0.95
    | @{Fair -> Loaded}   => 0.05
    | @{Loaded -> Fair}   => 0.1
    | @{Loaded -> Loaded} => 0.9
  }
}
