-- Example used in the Trellis paper

type Weather = { Sunny, Rainy }
type Mood = { Happy, Grumpy }

model {
  state = Weather
  output = Mood

  table sunnyObs(Mood) : Probability

  P(initial x) = 0.5
  P(output o | x) = {
    | @{Sunny} => sunnyObs(o)
    | @{Rainy} => 0.5
  }
  P(transition x y) = {
    | @{Sunny -> Sunny}   => 0.75
    | @{Sunny -> Rainy}   => 0.25
    | {x -> y | x == Rainy} => 0.5
  }
}
